# Environment Configuration for Dropout Prediction System
# Copy this file to .env and update the values as needed

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production-environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///dropout_prediction.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost/dropout_prediction

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ML Model Configuration
MODEL_RETRAIN_INTERVAL_DAYS=30
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# Notification Settings
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4
SEND_EMAIL_NOTIFICATIONS=False

# Security Settings
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Analytics and Reporting
ENABLE_ANALYTICS_TRACKING=True
EXPORT_DATA_RETENTION_DAYS=90

# Development Settings
LOG_LEVEL=INFO
ENABLE_PROFILING=False
